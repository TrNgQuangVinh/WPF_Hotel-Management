<Window x:Class="Assignment1.GUI.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment1.GUI"
        mc:Ignorable="d"
        Title="Window1" Height="auto" Width="auto" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Height="420" HorizontalAlignment="Center" Width="600" Background="#FFF0F0F0">
        <DataGrid x:Name="dgrReport" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,-18,0,120" Loaded="dgrReport_Loaded"/>
        <DatePicker x:Name="dpFrom" HorizontalAlignment="Left" Margin="152,335,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpTo" HorizontalAlignment="Left" Margin="347,335,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnReport" Content="Get Report" HorizontalAlignment="Center" Margin="0,376,0,0" VerticalAlignment="Top" Width="88" Height="28"/>
        <Label Content="From..." HorizontalAlignment="Left" Margin="180,309,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.19,-0.068"/>
        <Label Content="...to" HorizontalAlignment="Left" Margin="375,309,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.19,-0.068"/>
    </Grid>
</Window>
